{
	"manifest_version": 2,
	"name": "Mouseless",
	"version": "0.7.3",

	"description": "For a mouseless future.",

	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "ext/content.js" ]
		}
	],
	"background": {
		"scripts": [ "ext/background.js" ]
	},

	"options_ui": {
		"page": "settings/options.html"
	},

	"browser_action": {
		"default_icon": "icons/icon-64.png"
	},

	"applications": {
		"gecko": {
			"id": "@mouseless"
		}
	},

	"permissions": [
		"clipboardWrite",
		"tabs",
		"storage"
	]
}
