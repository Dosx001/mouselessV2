{
	"manifest_version": 2,
	"name": "Mouseless",
	"version": "0.7.3",

	"description": "For a mouseless future.",

	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "ext/content.js" ]
		}
	],
	"background": {
		"scripts": [ "ext/background.js" ]
	},

	"options_ui": {
		"page": "settings/options.html"
	},

	"browser_action": {
		"default_icon": {
			"32": "icons/icon-32.png",
			"48": "icons/icon-48.png",
			"64": "icons/icon-64.png",
			"128": "icons/icon-128.png"
		}
	},

	"applications": {
		"gecko": {
			"id": "@mouseless"
		}
	},

	"permissions": [
		"clipboardWrite",
		"tabs",
		"storage"
	]
}
